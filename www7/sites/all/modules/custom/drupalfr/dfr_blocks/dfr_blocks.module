function dfr_blocks_block_download() {
  $current_version = 'Drupal ' . variable_get('drupalfr_current_version', 7) . ' [FR]';
  $previous_version = 'Drupal ' . variable_get('drupalfr_previous_version', 6) . ' [FR]';
  $items = array(
    'drupal_current' => $current_version . l(t('Télécharger'), file_create_url('public://drupal-7.latest.tar.gz'), array('attributes' => array('class' => 'btn-link'))),
    'drupal_previous' => $previous_version . l(t('Télécharger'), file_create_url('public://drupal-6.latest.tar.gz'), array('attributes' => array('class' => 'btn-link'))),
  );
  return array(
    'subject' => "Obtenir la dernière version",
    'content' => array(
      '#theme' => 'item_list',
      '#items' => $items,
    ),
  );
}

