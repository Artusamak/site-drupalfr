        '#path' => 'association',
        '#options' => array(
          'attributes' => array('class' => array('btn-link')),
          'html' => FALSE,
        ),
      ),
      'link_2' => array(
        '#theme' => 'link',
        '#text' => "Nous contacter",
        '#path' => 'contact',
        '#options' => array(
          'attributes' => array('class' => array('btn-link')),
          'html' => FALSE,
        ),
      ),
    ),
  );
}

function dfr_blocks_block_twitter_asso() {
  $content = twitter_pull_render('#drupalfr');
  return array(
    'subject' => "Twitter #drupalfr",
    'content' => array(
      'text' => array(
        '#markup' => $content,
      ),
      'link' => array(
        '#theme' => 'link',
        '#text' => "Compte @drupalfr",
        '#path' => 'http://twitter.com/drupalfr',
        '#options' => array(
          'attributes' => array('class' => array('btn-link')),
          'html' => FALSE,
          'absolute' => TRUE,
        ),
      ),
    ),
  );
}

/**
 * Implements hook_block_view_alter().
 *
 * Add drupalfr link to twitter blocks.
 */
function dfr_blocks_block_view_alter(&$data, $block) {
  if ($block->module == 'twitter_block') {
    $data['content'] = array('original_content' => $data['content']);
    $data['content']['link'] = array(
      '#theme' => 'link',
      '#text' => "Compte @drupalfr",
      '#path' => 'http://twitter.com/drupalfr',
      '#options' => array(
        'attributes' => array('class' => array('btn-link')),
        'html' => FALSE,
        'absolute' => TRUE,
      ),
    );
  }
}
